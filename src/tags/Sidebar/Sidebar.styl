@import '~/var.styl'
.sidebar
    position relative
    height: 100%
    .open-btn
        position absolute
        right: -25px
        top: 0
        width: 25px
        height: 100%
        border-left: 3px solid #71bdf3
        z-index: 99999
        cursor pointer
        opacity: .3
        &:hover
            border-left: 5px solid #71bdf3
            opacity: .8
            &::after
                right: 3px 
                border-left: 8px solid #71bdf3
        &::after
            position absolute
            content: ''
            width: 0
            height: 0
            border-left: 3px solid #71bdf3
            border-right: 10px solid rgba(0,0,0,0)
            border-top: 10px solid rgba(0,0,0,0)
            border-bottom: 10px solid rgba(0,0,0,0)
            right: 10px
            top: 50%
            transform: translateY(-50%)
        